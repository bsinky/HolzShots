<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>

    <RootNamespace>HolzShots</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyTitle>HolzShots.Common</AssemblyTitle>
    <Product>HolzShots.Common</Product>
    <Description>HolzShots Common Library</Description>
    <Copyright>Niklas Mollenhauer - GPL-3.0</Copyright>

    <Version>2.0.0</Version>

    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <DebugType>portable</DebugType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(CI)' == 'True' ">
    <DefineConstants>$(DefineConstants);CI_BUILD</DefineConstants>
  </PropertyGroup>

  <ItemGroup>

    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="3.3.2" PrivateAssets="all" />

    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.1" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />

    <ProjectReference Include="..\HolzShots.Native\HolzShots.Native.csproj" />

  </ItemGroup>
</Project>
